# =============================================================================
# PERPS TRADER CONFIGURATION
# =============================================================================

# Core Application
APP_PORT=7777
APP_HOST=0.0.0.0
ENVIRONMENT=production

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/perps-trader?retryWrites=true&w=majority

# =============================================================================
# HYPERLIQUID CONFIGURATION
# =============================================================================

# Feature Control
HL_ENABLED=false

# Environment (testnet or mainnet)
HL_ENV=testnet

# API Endpoints
HL_API_URL=https://api.hyperliquid-testnet.xyz
HL_INFO_URL=https://api.hyperliquid-testnet.xyz/info

# Wallet Configuration (REQUIRED for trading)
HL_ADDRESS=your_wallet_address_here
HL_PRIVATE_KEY=your_encrypted_private_key_here
HL_KEY_SECRET=your_encryption_secret_here

# Trading Parameters
HL_DEFAULT_LEVERAGE=3
HL_MAX_OPEN_POSITIONS=1
HL_STOP_LOSS_PERCENT=10
HL_TAKE_PROFIT_PERCENT=20
HL_DEFAULT_AMOUNT_IN=100  # Default amount in USDC

# API Configuration
HL_TIMEOUT_MS=30000
HL_RETRY_MAX_ATTEMPTS=3
HL_RETRY_BASE_DELAY_MS=1000

# Risk Management
HL_MAX_LEVERAGE_PER_SYMBOL=10
HL_MAX_NOTIONAL_PER_ORDER=10000
HL_MAX_TOTAL_NOTIONAL=50000

# =============================================================================
# EXTERNAL SERVICES (OPTIONAL)
# =============================================================================

# Predictor Service (AI Trading Signals)
PREDICTOR_URL=http://trader-ai
PREDICTOR_PORT=7007

# Indexer Service (Price Feeds) - REQUIRED
INDEXER_HOST=sol-indexer
INDEXER_WS_PORT=7070
INDEXER_API_PORT=7071

# =============================================================================
# DATADOG MONITORING (OPTIONAL)
# =============================================================================

DD_API_KEY=your_datadog_api_key
DD_APP_KEY=your_datadog_app_key
DD_API_URL=https://api.datadoghq.eu
DD_SITE=datadoghq.eu

# =============================================================================
# EXTERNAL SERVICE PATHS (FOR DOCKER COMPOSE)
# =============================================================================

# Paths to external service repositories
TRADER_AI_PATH=../trader-ai
SOL_INDEXER_PATH=../sol-indexer

# External service configuration
TRADER_AI_API_KEY=optional_api_key_for_ai_service

# ClickHouse (used by external services)
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=atrader

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Logging
LOG_LEVEL=info

# Version (for deployments)
VERSION=1.0.0

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================

# 1. MONGODB_URI: Get from MongoDB Atlas dashboard
# 2. HL_PRIVATE_KEY: Use HyperliquidService.encryptPrivateKey() to encrypt
# 3. HL_KEY_SECRET: Generate a secure random string for encryption
# 4. For testnet: Use HL_ENV=testnet and testnet API URLs
# 5. For mainnet: Use HL_ENV=mainnet and mainnet API URLs
# 6. CHAINSTREAM_API_KEY: Required for sol-indexer price feeds
# 7. Set HL_ENABLED=true only when ready to trade with real funds